<Window x:Name="mainWindow" x:Class="YoloMark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoloMark"
        mc:Ignorable="d"
        Title="MainWindow" Width="1016" Height="500" Loaded="mainWindow_Loaded">
    <Grid> 
        <TextBox x:Name="textBoxWidth" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="10,0,0,0"/>
        <TextBox x:Name="textBoxHeight" HorizontalAlignment="Left" Height="23" Margin="135,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="resizeButton" Content="Resize" HorizontalAlignment="Left" Margin="260,3,0,0" VerticalAlignment="Top" Width="75" Click="resizeButton_Click"/>
        <Slider HorizontalAlignment="Left" Margin="396,13,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="450,21,0,0" VerticalAlignment="Top"/>
        <Grid Margin="0,28,0,321">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imagePreview1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="2"/>
            <Image x:Name="imagePreview2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.ColumnSpan="4"/>
            <Image x:Name="imagePreview3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="6"/>
            <Image x:Name="imagePreview4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="7"/>
            <Image x:Name="imagePreview5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="8"/>
        </Grid>
        <Canvas x:Name="mainCanvas" Margin="5,153,5,5" Cursor="Arrow" SizeChanged="mainCanvas_SizeChanged" MouseLeftButtonDown="mainCanvas_MouseLeftButtonDown" MouseMove="mainCanvas_MouseMove" MouseLeftButtonUp="mainCanvas_MouseLeftButtonUp" MouseRightButtonDown="mainCanvas_MouseRightButtonDown" />
    </Grid>
</Window>
